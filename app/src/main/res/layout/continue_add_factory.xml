<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_add_factory"
    android:paddingTop="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp"
    >
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/factory"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:padding="@dimen/_5sdp"
            />
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="أضف مصنعك"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"

            >

            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:drawableRight="@drawable/ic_mail_outline_black_24dp"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حدد مكان المصنع على الخريطه  "
                android:layout_margin="@dimen/_5sdp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.gms.maps.MapView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mapView2" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="أتمام الاضافه "
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn"
            android:id="@+id/continu_add_factor" />

    </LinearLayout>

</FrameLayout>